{
  "name": "ragtime-backend",
  "version": "1.0.0",
  "description": "Backend services for RagTime - text processing and embedding generation",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.637.0",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.152",
    "@types/jest": "^29.5.13",
    "@types/node": "^22.0.0",
    "@types/pg": "^8.15.5",
    "aws-sdk": "^2.1692.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "~5.2.2",
    "eslint": "^8.57.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testMatch": ["**/*.test.ts"],
    "testPathIgnorePatterns": ["/node_modules/"]
  }
}